{
    "env": {
        "node": true,
        "commonjs": true,
        "mocha" : true,
        "es6" : true

    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "max-len": [
            "warn",
            { "code" : 80 }
        ]
    }
}
